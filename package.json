{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/**"
  ],
  "scripts": {
    "commit": "git-cz",
    "build": "lerna run --stream --toposort build",
    "clean": "yarn workspaces run clean",
    "lint": "eslint --fix",
    "test:all": "yarn workspaces run test",
    "test:changed": "lerna run test --since origin/master",
    "version": "lerna version --conventional-commits --yes"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.4",
    "@commitlint/config-conventional": "^8.3.4",
    "@commitlint/config-lerna-scopes": "^8.3.4",
    "commitizen": "^4.0.3",
    "cz-conventional-changelog": "^3.0.2",
    "husky": "^4.0.7",
    "lerna": "^3.20.2",
    "lint-staged": "^9.5.0",
    "yarn": "^1.21.1"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "yarn run test:changed"
    }
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional",
      "@commitlint/config-lerna-scopes"
    ]
  },
  "lint-staged": {
    "*.js": [
      "yarn run lint",
      "git add"
    ]
  }
}
